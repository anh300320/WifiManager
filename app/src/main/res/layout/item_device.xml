<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/item_device_icon"
        android:layout_margin="@dimen/margin_3dp"
        android:src="@drawable/ic_devices_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_device_name"
        android:layout_margin="@dimen/margin_3dp"
        android:textColor="@color/color_text"
        android:text="Device's name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_device_icon"/>

    <TextView
        android:id="@+id/item_device_vendor"
        android:layout_margin="@dimen/margin_3dp"
        android:text="Vendor"
        android:textColor="@color/color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_device_name"
        android:layout_toRightOf="@+id/item_device_icon"/>

    <TextView
        android:id="@+id/item_device_mac"
        android:text="MAC"
        android:textColor="@color/color_text"
        android:layout_margin="@dimen/margin_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_device_vendor"
        android:layout_toRightOf="@+id/item_device_icon"/>

    <TextView
        android:id="@+id/item_device_address"
        android:text="IP address"
        android:textColor="@color/color_text"
        android:layout_margin="@dimen/margin_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_device_mac"
        android:layout_toRightOf="@+id/item_device_icon"/>
</RelativeLayout>